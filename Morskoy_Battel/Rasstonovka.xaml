<Window x:Class="Morskoy_Battel.Rasstonovka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расстановка кораблей"
        Height="780" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0a192f">

    <Grid>
        <Rectangle IsHitTestVisible="False">
            <Rectangle.Fill>
                <DrawingBrush TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing>
                            <GeometryDrawing.Geometry>
                                <EllipseGeometry Center="50,50" RadiusX="2" RadiusY="2"/>
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Brush>
                                <SolidColorBrush Color="#112240" Opacity="0.5"/>
                            </GeometryDrawing.Brush>
                        </GeometryDrawing>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Корабли" Foreground="#64ffda" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Button Content="Авторазмещение" Click="AutoPlaceShips_Click" Margin="0,5" Background="#2A9D8F" Foreground="White" FontSize="16" Height="40" Cursor="Hand"/>
                    <Button Content="Очистить поле" Margin="0,5" Background="#E63946" Foreground="White" FontSize="16" Height="40" Cursor="Hand" Click="ClearField_Click"/>
                    <Button Content="Повернуть корабль" Margin="0,5" Background="#3E92CC" Foreground="White" FontSize="16" Height="40" Cursor="Hand" Click="RotateShip_Click"/>
                    
                    <Button x:Name="Next_player" Content="➡ Второй игрок" Margin="0,20,0,0" Background="#6C5CE7" Foreground="White" FontSize="18" Height="45" Cursor="Hand" Click="StartSecondPlayer_Click"/>
                </StackPanel>

                <Border BorderBrush="#1f3557" BorderThickness="1" CornerRadius="5" Background="#10243b" Height="400">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ShipsPanel" Margin="10"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <TextBlock x:Name="TitleText" Text="Игрок 1 — расставьте корабли" Foreground="#64ffda" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Border x:Name="FieldContainer" Width="450" Height="450" Background="#10243b" BorderBrush="#1f3557" BorderThickness="2"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
